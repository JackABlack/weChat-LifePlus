<!--计时选择器核心组件-->
<view wx-if='{{addTimer && !timerStart}}' class="{{wannaStart?'section1':'section'}}">
  <picker mode="time" value="{{time}}" start="{{timeNow}}" end="23:59" bindchange="bindTimeChange">
    <view>
      {{time}}
    </view>
  </picker>
</view>
<view wx-if='{{!join && wannaStart}}'>
<input class='title' type='text' bindinput='title' placeholder='请输入您的专注内容'></input>
<input class='money' type='text' bindinput='money' placeholder='请选择您的专注金额'></input>
</view>

<view wx-if='{{join}}'>
  <input class='money' type='text' bindinput='money' placeholder='房间号'> </input>
  <button class='start2' wx-if='{{join}}' bindtap='join'>
    <text class='fuckNoFontClolr'>加入</text>
  </button>
</view>
<button class='start' wx-if='{{!timerStart && !multi && !wannaStart}}' bindtap='gonnaStart'>
  <text class='fuckNoFontClolr'>开始专注</text>
</button>
<button class='start' wx-if='{{!timerStart && !multi && wannaStart}}' bindtap='start'>
  <text class='fuckNoFontClolr'>设置完毕</text>
</button>

<button class='start1' wx-if='{{!timerStart && multi}}' bindtap='create' open-type='share'>
  <text class='fuckNoFontClolr'>创建房间</text>
</button>
<button class='start' wx-if='{{!timerStart && multi}}' bindtap='joinIn'>
  <text class='fuckNoFontClolr'>加入房间</text>
</button>

<!--计时器核心组件-->
<text class='countdown' wx-if='{{timerStart && !fail}}'>{{wxTimer}}</text>
