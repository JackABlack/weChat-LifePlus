*                      *
************************/
.more{
  width: 34rpx;
  height: 34rpx;
  margin-left: 30rpx;  
}

.menuBotton{
  background-color: #77B7FF;
  width: 100%;
  height: 62rpx;
  display: block;
}
.menu{
  position: fixed;
  background-color: #77b7ff;
  width: 100%;
  height: 100%;
  z-index: 0;
  animation: slidein 0.5s ease alternate;
}
@keyframes slidein{
  0%{left:-750rpx;}
  100%{left: 0rpx;}
}
.menuout{
  position: fixed;
  background-color: #77b7ff;
  width: 100%;
  height: 100%;
  z-index: 0;
  left: -750rpx;
  animation: slideout 0.5s ease;
}
@keyframes slideout{
  0%{left:0rpx;}
  100%{left: -750rpx;}
}
.avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  position: absolute;
  left: 41%;
  top: 98rpx;
}
.close{
  width: 38rpx;
  height: 38rpx;
  margin-top: 6rpx;
  margin-left: 30rpx;
}
.divider{
  width: 552rpx;
  height: 2rpx;
  margin-left: 100rpx;
}
.overview{
  color: white;
  font-family: '华文细黑';
  font-size: 26rpx;
  vertical-align: middle;
  margin-top: 268rpx;
}
.icon{
  width: 44rpx;
  height: 44rpx;
  margin-top: 4rpx;
  margin-left: 184rpx;
  margin-right: 74rpx;
}
