.menu {
  position: fixed;
  width: 100%;
  height: 100%;
  animation: slidein 0.5s ease alternate;
  background-image: url('https://lifeplus-1256582318.cos.ap-chengdu.myqcloud.com/TIM%E5%9B%BE%E7%89%8720180609170932.png');
  z-index: 0;
}

@keyframes slidein {
  0% {
    left: -750rpx;
  }

  100% {
    left: 0rpx;
  }
}

.menuout {
  position: fixed;
  background-image: url('https://lifeplus-1256582318.cos.ap-chengdu.myqcloud.com/TIM%E5%9B%BE%E7%89%8720180609170932.png');
  width: 100%;
  height: 100%;
  z-index: 0;
  left: -750rpx;
  animation: slideout 0.5s ease;
  
}

@keyframes slideout {
  0% {
    left: 0rpx;
  }

  100% {
    left: -750rpx;
  }
}

